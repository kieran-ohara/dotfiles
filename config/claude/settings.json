{
  "model": "opus",
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "invoice-tools@kieran-plugins": true
  },
  "alwaysThinkingEnabled": true,
  "permissions": {
    "allow": [
      "Bash(ls *)",
      "Bash(find *)",
      "Bash(git commit *)",
      "Read",
      "Bash(gh pr *)",
      "Bash(cat *)",
      "Bash(cd *)",
      "Bash(npx prettier *)",
      "Bash(git fetch *)",
      "Bash(git checkout *)",
      "WebFetch",
      "Bash(tail *)",
      "Bash(mkdir *)",
      "Bash(yarn workspace *)"
    ],
    "deny": [
      "Bash(yarn workspace * add *)",
      "Bash(yarn workspace * remove *)"
    ]
  }
}
