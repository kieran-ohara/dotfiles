{
  "mcpServers": {
    "browserbase": {
      "command": "mcp-server-browserbase",
      "args": [],
      "env": {
        "BROWSERBASE_API_KEY": "${BROWSERBASE_API_KEY}",
        "BROWSERBASE_PROJECT_ID": "${BROWSERBASE_PROJECT_ID}"
      },
      "tags": ["core"]
    },
    "playwright": {
      "command": "mcp-server-playwright",
      "args": [],
      "tags": ["core"]
    },
    "obsidian": {
      "command": "mcp-obsidian",
      "args": ["/Users/kieranohara/Obsidian/Vault"],
      "tags": ["core"]
    },
    "mochi": {
      "command": "mcp-mochi",
      "args": [],
      "env": {
        "MOCHI_API_KEY": "${MOCHI_API_KEY}"
      },
      "tags": ["core"]
    },
    "xero": {
      "command": "xero-mcp-server",
      "args": [],
      "env": {
        "XERO_CLIENT_ID": "${XERO_CLIENT_ID}",
        "XERO_CLIENT_SECRET": "${XERO_CLIENT_SECRET}"
      },
      "tags": ["accounting"]
    },
    "context7": {
      "command": "mcp-remote",
      "args": ["https://mcp.context7.com/mcp", "--header", "CONTEXT7_API_KEY:${MCP_CONTEXT7_API_KEY}"],
      "tags": ["dev"]
    },
    "aws-knowledge": {
      "command": "mcp-remote",
      "args": ["https://knowledge-mcp.global.api.aws"],
      "tags": ["dev"]
    },
    "omnifocus": {
      "command": "omnifocus-mcp",
      "args": [],
      "tags": ["core"]
    },
    "ms365": {
      "command": "ms-365-mcp-server",
      "args": ["--org-mode", "--enabled-tools", "mail|attachment|draft|calendar|event|contact|shared"],
      "env": {
        "MS365_MCP_CLIENT_ID": "${MS365_MCP_CLIENT_ID}",
        "MS365_MCP_CLIENT_SECRET": "${MS365_MCP_CLIENT_SECRET}",
        "MS365_MCP_TENANT_ID": "${MS365_MCP_TENANT_ID}"
      },
      "tags": ["business"]
    },
    "ms365-accounting": {
      "command": "ms-365-mcp-server",
      "args": ["--org-mode", "--enabled-tools", "mail|attachment|draft|calendar|event|contact|shared|sharepoint|site|excel|worksheet|workbook|range|chart|file"],
      "env": {
        "MS365_MCP_CLIENT_ID": "${MS365_MCP_CLIENT_ID}",
        "MS365_MCP_CLIENT_SECRET": "${MS365_MCP_CLIENT_SECRET}",
        "MS365_MCP_TENANT_ID": "${MS365_MCP_TENANT_ID}"
      },
      "tags": ["accounting"]
    },
    "powerplatform": {
      "command": "powerplatform-mcp",
      "args": [],
      "env": {
        "POWERPLATFORM_URL": "${POWERPLATFORM_URL}",
        "POWERPLATFORM_CLIENT_ID": "${POWERPLATFORM_CLIENT_ID}",
        "POWERPLATFORM_CLIENT_SECRET": "${POWERPLATFORM_CLIENT_SECRET}",
        "POWERPLATFORM_TENANT_ID": "${POWERPLATFORM_TENANT_ID}"
      },
      "tags": ["business"]
    }
  }
}
