resumevimsession() {
  emulate -L zsh

  POSITIONAL=()
  while [[ $# -gt 0 ]]; do
      key="$1"

      case $key in
          -c|--use-container)
              USE_CONTAINER=true
              shift # past argument
              shift # past value
              ;;
          *)    # unknown option
              POSITIONAL+=("$1") # save it in an array for later
              shift # past argument
              ;;
      esac
  done

  set -- "${POSITIONAL[@]}" # restore positional parameters

  HOST_MOUNT="${HOME}/src/$@"
  FILENAME="${HOST_MOUNT}/Session.vim"

  if [ ! -z ${USE_CONTAINER} ]; then
      CONTAINER_MOUNT="/Users/kieran/src/$1"
      docker run -it --rm -v "${HOST_MOUNT}":"${CONTAINER_MOUNT}" -w "${CONTAINER_MOUNT}" kieranbamforth/nvim:latest /bin/sh -c "nvim";
  else
      if [ -f "$FILENAME" ]; then
          COMMAND="nvim -S $FILENAME";
      else
          cd "${HOST_MOUNT}" || exit
          COMMAND="nvim -c ':Obsess'"
      fi
      set -x
      $SHELL -c "$COMMAND";
  fi
}